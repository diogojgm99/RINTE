    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to "New Item", new_article_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "New Color", root_path, class:"nav-link" %>
